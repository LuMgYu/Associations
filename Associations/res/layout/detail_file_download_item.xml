<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:background="@color/main_white_pure_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_white_pure_color"
        android:paddingLeft="@dimen/margin_left_small"
        android:paddingRight="@dimen/margin_right_small" >

        <ImageView
            android:id="@+id/detail_file_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_small"
            android:src="@drawable/doc" />

        <TextView
            android:id="@+id/detail_file_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_toRightOf="@id/detail_file_iv"
            android:text="社团相关文件.doc"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_small" />

        <Button
            android:id="@+id/detail_file_iv_issure"
            android:layout_width="70dp"
            android:layout_height="@dimen/item_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/main_color"
            android:src="@drawable/choseed"
            android:text="下载"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_big" />
    </RelativeLayout>

</LinearLayout>