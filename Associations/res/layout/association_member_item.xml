<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white_pure_color" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp" >

        <com.zhiyisoft.associations.img.RoundImageView
            android:id="@+id/member_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_top"
            android:src="@drawable/default_image_small" />

        <TextView
            android:id="@+id/member_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/member_iv"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/member_iv"
            android:text="张晓梅"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_big" />

        <TextView
            android:id="@+id/member_tv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/member_tv_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/member_iv"
            android:text="北京大学青鸟学院"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_common" />
    </RelativeLayout>

</LinearLayout>