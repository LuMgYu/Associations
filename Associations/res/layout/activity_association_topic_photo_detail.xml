<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/main_black_color" >

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/margin_left_small"
            android:paddingRight="@dimen/margin_right_small" >

            <ImageView
                android:id="@+id/iv_backpress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/x_whirt" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="1/32"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_big"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/more3" />
        </RelativeLayout>
    </RelativeLayout>

    <com.zhiyisoft.associations.img.SmartImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/default_image_small"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/rl_footer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/main_black_color" >

        <LinearLayout
            android:id="@+id/ll_fill_twobutton"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:layout_marginLeft="@dimen/margin_left_small"
            android:layout_marginRight="@dimen/margin_right_small"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_save_to_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/btn_white"
                android:text="保存到手机"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_small" />

            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginTop="@dimen/margin_top"
                android:background="@drawable/btn_white"
                android:text="取消"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_small" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>