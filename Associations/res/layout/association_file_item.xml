<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white_pure_color"
    android:orientation="vertical" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/view_line_vertical" />

    <RelativeLayout
        android:id="@+id/rl_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top" >

        <com.zhiyisoft.associations.img.RoundImageView
            android:id="@+id/iv_file_user_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_small"
            android:src="@drawable/association_icon" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_small"
            android:layout_toRightOf="@id/iv_file_user_icon"
            android:text="牛牛哥"
            android:textColor="#003d90"
            android:textSize="@dimen/text_big" />

        <TextView
            android:id="@+id/tv_user_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_user_name"
            android:text="上传了文件"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_big" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_file_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_file_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_small"
            android:layout_marginRight="@dimen/margin_right_small"
            android:layout_marginTop="@dimen/margin_top"
            android:text="优衣库我来了"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_big" />

        <RelativeLayout
            android:id="@+id/rl_file_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_below="@id/tv_file_title"
            android:layout_marginLeft="@dimen/margin_left_small"
            android:layout_marginRight="@dimen/margin_right_small"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@color/main_gray_color"
            android:orientation="vertical" >

            <com.zhiyisoft.associations.img.SmartImageView
                android:id="@+id/iv_file"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/doc" />

            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_small"
                android:layout_marginRight="@dimen/margin_right_small"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_toRightOf="@id/iv_file"
                android:text="社团最新详情指南v2.pdf"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_small" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_file_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_marginTop="@dimen/margin_top" >

        <TextView
            android:id="@+id/tv_file_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_small"
            android:text="2015-05-20"
            android:textColor="@color/text_more_gray"
            android:textSize="@dimen/text_verysmall" />

        <TextView
            android:id="@+id/tv_file_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_right_small"
            android:drawableLeft="@drawable/comment"
            android:drawablePadding="4dp"
            android:text="12"
            android:textColor="@color/text_more_gray"
            android:textSize="@dimen/text_verysmall" />
    </RelativeLayout>

    <include layout="@layout/view_line_vertical" />

</LinearLayout>