<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_white_pure_color"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/association_ll_data"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@color/main_gray_color"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.zhiyisoft.associations.img.RoundImageView
            android:id="@+id/association_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_left"
            android:src="@drawable/association_title" />

        <TextView
            android:id="@+id/association_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="社团资料"
            android:textSize="@dimen/text_big" />

        <ImageView
            android:id="@+id/association_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_small"
            android:src="@drawable/x" />
    </LinearLayout>

    <TextView
        android:id="@+id/mexmber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_height"
        android:drawableLeft="@drawable/shet"
        android:drawablePadding="5dp"
        android:text="社团成员"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_big" />

    <TextView
        android:id="@+id/album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_height"
        android:drawableLeft="@drawable/picture"
        android:drawablePadding="5dp"
        android:text="社团相册"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_big" />

    <TextView
        android:id="@+id/vedio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_height"
        android:drawableLeft="@drawable/vedio5"
        android:drawablePadding="5dp"
        android:text="社团视频"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_big" />

    <TextView
        android:id="@+id/file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_height"
        android:drawableLeft="@drawable/file"
        android:drawablePadding="5dp"
        android:text="社团文件"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_big" />

    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_height"
        android:drawableLeft="@drawable/share"
        android:drawablePadding="5dp"
        android:text="分享社团"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_big" />

    <Button
        android:id="@+id/btn_quit"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/item_height"
        android:background="@drawable/btn_red_more_radius"
        android:text="退出社团"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_big" />

</LinearLayout>