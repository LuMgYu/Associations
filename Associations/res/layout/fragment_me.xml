<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff8" >

    <LinearLayout
        android:id="@+id/me_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 个人信息布局布局 -->

        <RelativeLayout
            android:id="@+id/me_rl_find"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffe" >

            <FrameLayout
                android:id="@+id/me_fl_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="#90e" >

                <ImageView
                    android:id="@+id/me_iv_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/me_iv_photo"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="right|bottom"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_launcher" />
            </FrameLayout>

            <TextView
                android:id="@+id/me_tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/me_fl_icon"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/me_fl_icon"
                android:text="i牛牛哥"
                android:textSize="12sp" />

            <Button
                android:id="@+id/me_btn_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/me_tv_nick"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/me_fl_icon"
                android:padding="1dp"
                android:text="更新资料"
                android:textColor="#fff"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/arrow_down" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eee" />
        <!-- 个性签名布局 -->

        <RelativeLayout
            android:id="@+id/me_rl_signature"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#ffa"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/me_tv_signature_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="个性签名:"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/me_tv_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/me_tv_signature_des"
                android:text="however,this is jb useful"
                android:textColor="#888"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/arrow_down" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eee" />
        <!-- 我的内容布局布局 -->

        <LinearLayout
            android:id="@+id/me_ll_content"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#483"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/me_ll_myMove"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/me_iv_myMove"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/me_tv_myMove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的活动" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="#888" />

            <LinearLayout
                android:id="@+id/me_ll_myAssociate"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/me_iv_myAssociate"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/me_tv_myAssociate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的社团" />
            </LinearLayout>
        </LinearLayout>
        <!-- 空白区域 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eee" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="35dp"
            android:background="#eee" />
        <!-- 我的勋章 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/me_tv_aword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="我的勋章"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/arrow_down" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eee" />
        <!-- 关于软件 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/me_tv_soft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="關于軟件"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/me_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/arrow_down" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/me_arrow_right"
                android:text="v1.0"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>